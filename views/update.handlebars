<div class="post-container">
  <div class="post">
    <h2>
      {{title}}
    </h2>
    <h2>
      Posted by
      {{user.name}}
      on
      {{format_date date_created}}
    </h2>
  </div>
  <p>
    {{description}}
  </p>
</div>
<div class="row">
</div>
<div class="post-container">
  <div class="post">
    <h3>Update a Project:</h3>
  </div>
  <form class="form update-post-form">
    <div class="form-group">
      <label for="project-name">Title</label>
      <input
        class="form-input"
        type="text"
        id="project-name"
        name="project-name"
      />
    </div>
    <div class="form-group">
      <label for="project-desc">Content</label>
      <textarea
        class="form-input"
        id="project-desc"
        name="project-desc"
      ></textarea>
    </div>
    <div class="posts-list">
      <div class="form-group">
        <button class="update-btn" data-id="{{id}}">update</button>
      </div>
    </div>
  </form>
</div>
<script src="/js/update.js"></script>