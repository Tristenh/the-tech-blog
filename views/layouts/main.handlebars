<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <link rel="stylesheet" href="/css/styles.css" />
  <body>
    <div class="flex-column justify-space-around">
      <header class="display-flex justify-space-between align-center p-4">
        <nav>
          <!-- Conditionally render login or logout links -->
          <div class="nav-control">
            <a href="/">Home</a>
            {{#if logged_in}}
              <a href="/profile">Dashboard</a>
              <a class="no-button" id="logout">Logout</a>
            {{else}}
              <a href="/login">Login</a>
            {{/if}}
          </div>
          <h1 class="title">
            <a href="/">The Tech Blog</a>
          </h1>
        </nav>
      </header>
      <main class="container container-fluid mt-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
    </div>
      <footer>
        <h4>created by Tristen Hobba</h4>
      </footer>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>